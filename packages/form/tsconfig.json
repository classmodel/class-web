{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "node"],
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
