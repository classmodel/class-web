{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "node"],
    "isolatedModules": true,
    "strictNullChecks": true,
    "noEmit": true,
    "skipLibCheck": true,
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
