{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "target": "ES2022",
    "preserveWatchOutput": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "sourceMap": true
  },
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "docs",
    "entryPointStrategy": "expand",
    "name": "@classmodel/class API documentation",
    "includeVersion": true,
    "navigationLinks": {
      "Application": "/class-web",
      "GitHub": "https://github.com/classmodel/class-web"
    },
    "exclude": ["**/*.test.ts"]
  }
}
